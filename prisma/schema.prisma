generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transcript {
  id          String       @id @default(cuid())
  filename    String
  duration    Int?
  status      String       @default("pending")
  text        String?
  srt         String?
  language    String?
  assemblyId  String?
  error       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  title       String?
  cleanedText String?
  projectId   String?
  summary     String?
  aiStatus    String?      // null = not started, "processing" = in progress, "completed" = done, "error" = failed
  aiError     String?
  actionItems ActionItem[]
  decisions   Decision[]
  reports     Report[]
  project     Project?     @relation(fields: [projectId], references: [id])
}

model User {
  id        String        @id
  email     String        @unique
  role      String        @default("USER") // 'ADMIN' or 'USER'
  approved  Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  projects  UserProject[]
  folders   Folder[]
}

model Project {
  id              String        @id @default(cuid())
  name            String
  description     String?
  status          String        @default("active")
  statusSummary   String?       // Stand van Zaken - cumulatieve AI-gegenereerde projectstatus
  statusUpdatedAt DateTime?     // Wanneer de SVZ voor het laatst is bijgewerkt
  folderId        String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  folder          Folder?       @relation(fields: [folderId], references: [id], onDelete: SetNull)

  actionItems     ActionItem[]
  decisions       Decision[]
  reports         Report[]
  transcripts     Transcript[]
  users           UserProject[]
}

model Folder {
  id        String    @id @default(cuid())
  name      String
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects  Project[]
}

model UserProject {
  userId    String
  projectId String
  role      String   @default("MEMBER") // 'OWNER', 'ADMIN', 'MEMBER', 'VIEWER'
  assignedAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([userId, projectId])
}

model Report {
  id           String       @id @default(cuid())
  title        String
  content      String
  type         String       @default("meeting")
  status       String       @default("draft")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  projectId    String
  transcriptId String?
  actionItems  ActionItem[]
  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  transcript   Transcript?  @relation(fields: [transcriptId], references: [id])
}

model ActionItem {
  id           String      @id @default(cuid())
  title        String
  description  String?
  status       String      @default("open")
  priority     String      @default("medium")
  assignee     String?
  dueDate      DateTime?
  completedAt  DateTime?
  sourceType   String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  projectId    String
  transcriptId String?
  reportId     String?
  project      Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  report       Report?     @relation(fields: [reportId], references: [id])
  transcript   Transcript? @relation(fields: [transcriptId], references: [id])
}

model Decision {
  id           String      @id @default(cuid())
  title        String
  description  String?
  context      String?
  status       String      @default("active")
  madeBy       String?
  sourceType   String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  projectId    String
  transcriptId String?
  project      Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  transcript   Transcript? @relation(fields: [transcriptId], references: [id])
}

model SavedDestination {
  id        String   @id @default(cuid())
  label     String
  type      String
  address   String
  createdAt DateTime @default(now())
}
